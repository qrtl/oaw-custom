<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_stock_quant_form" model="ir.ui.view">
        <field name="name">stock.quant.form</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="sale_order_line_quant.view_stock_quant_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reservation_id']" position="after">
                <field name="sale_line_id"/>
            </xpath>
        </field>
    </record>

    <record id="view_stock_quant_tree" model="ir.ui.view">
        <field name="name">stock.quant.tree</field>
        <field name="model">stock.quant</field>
        <field name="inherit_id" ref="sale_order_line_quant.view_stock_quant_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reservation_id']" position="after">
                <field name="sale_line_id"/>
            </xpath>
        </field>
    </record>

</odoo>
