<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <delete id="product.product_comp_rule" model="ir.rule"/>
        <record id="product.product_comp_rule" model="ir.rule">
            <field name="name" >Product multi-company</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="global" eval="True"/>
            <field name="active" eval="False"/>
            <field name="domain_force"> ['|',('company_id','=',user.company_id.id),('company_id','=',False)]</field>
        </record>

        <record id="product_comp_rule_custom_read" model="ir.rule">
            <field name="name" >Product Multi-company Custom Read</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force"> [('company_id','!=',user.company_id.id)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="False"/>
            <field name="perm_unlink" eval="False"/>
            <field name="perm_write" eval="False"/>
        </record>

        <record id="product_comp_rule_custom_update" model="ir.rule">
            <field name="name" >Product Multi-company Custom Update</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
            <field name="domain_force"> ['|',('company_id','=',user.company_id.id),('company_id','=',False)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
        </record>

        <record id="product_comp_rule_custom_admin" model="ir.rule">
            <field name="name" >Product Multi-company Custom Admin</field>
            <field name="model_id" ref="product.model_product_template"/>
            <field name="groups" eval="[(4, ref('base.group_system'))]"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="perm_read" eval="True"/>
            <field name="perm_create" eval="True"/>
            <field name="perm_unlink" eval="True"/>
            <field name="perm_write" eval="True"/>
        </record>

    </data>
</odoo>
