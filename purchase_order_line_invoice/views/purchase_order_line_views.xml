<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="purchase_order_line_tree" model="ir.ui.view">
        <field name="name">purchase.order.line.tree</field>
        <field name="model">purchase.order.line</field>
        <field name="priority" eval="50"/>
        <field name="arch" type="xml">
            <tree string="Purchase Order Lines" create="false">
                <field name="order_id"/>
                <field name="partner_ref"/>
                <field name="is_vci" string="VCI"/>
                <field name="image_medium" widget="image" options='{"size": [64, 64]}'/>
                <field name="partner_id" string="Supplier"/>
                <field name="price_unit" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="product_id"/>
                <field name="lot_id"/>
                <field name="sale_order_partner_id"/>
                <field name="sale_order_currency_id" invisible="1"/>
                <field name="sale_order_line_price_unit" widget="monetary" options="{'currency_field': 'sale_order_currency_id'}"/>
                <field name="propose_margin"/>
                <field name="move_state"/>
                <field name="currency_id" invisible="1"/>
                <field name="product_qty"/>
                <field name="price_subtotal" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                <field name="date_planned"  widget="date"/>
            </tree>
        </field>
    </record>

    <record id="purchase_order_line_search" model="ir.ui.view">
        <field name="name">purchase.order.line.search</field>
        <field name="model">purchase.order.line</field>
        <field name="inherit_id" ref="purchase.purchase_order_line_search"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_id']" position="after">
                <field name="partner_ref"/>
            </xpath>
        </field>
    </record>

    <record id="action_menu_action_purchase_order_line" model="ir.actions.act_window">
        <field name="name">Purchase Order Lines</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">purchase.order.line</field>
        <field name="domain">[('state','in',('purchase','done')), ('invoiced', '=', False)]</field>
        <field name="view_type">form</field>
        <field name="view_mode">tree</field>
        <field name="view_id" ref="purchase_order_line_tree"/>
    </record>

    <menuitem id="menu_action_purchase_order_line" action="action_menu_action_purchase_order_line"
              parent="purchase.menu_purchase_control" sequence="10"/>

</odoo>
