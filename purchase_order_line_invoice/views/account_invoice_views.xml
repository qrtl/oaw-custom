<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="invoice_supplier_form" model="ir.ui.view">
        <field name="name">account.invoice.supplier.form</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="attributes">
                <attribute name="string">Vendor Bill Reference</attribute>
            </xpath>
        </field>
    </record>
    <record id="invoice_supplier_tree" model="ir.ui.view">
        <field name="name">account.invoice.supplier.tree</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.invoice_supplier_tree" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='reference']" position="attributes">
                <attribute name="string">Vendor Bill Reference</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_account_invoice_filter" model="ir.ui.view">
        <field name="name">account.invoice.select</field>
        <field name="model">account.invoice</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='number']" position="after">
                <field name="reference" string="Vendor Bill Reference" />
            </xpath>
        </field>
    </record>
</odoo>
