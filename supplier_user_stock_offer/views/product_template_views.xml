<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_product_catalog_tree" model="ir.ui.view">
        <field name="name">view.product.catalog.tree</field>
        <field name="model">product.template</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <tree string="Products Catalog">
                <field name="category_name"/>
                <field name="default_code"/>
                <field name="name"/>
                <field name="image_medium" widget="image"/>
            </tree>
        </field>
    </record>

    <record id="product_catalog_search" model="ir.ui.view">
        <field name="name">product.catalog.tree</field>
        <field name="model">product.template</field>
        <field eval="100" name="priority"/>
        <field name="arch" type="xml">
            <search string="Products Catalog">
                <field name="category_name"/>
                <field name="name" string="Product" filter_domain="['|', '|', ('product_variant_ids.default_code', 'ilike', self),('name', 'ilike', self), ('barcode', 'ilike', self)]"/>
                <group expand="0" string="Group By">
                    <filter name="groupby_category_name" string="Brand " domain="[]" context="{'group_by':'category_name'}"/>
                </group>
            </search>
        </field>
    </record>

    <record id="action_product_catalog" model="ir.actions.act_window">
        <field name="name">Products Catalog</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">product.template</field>
        <field name="view_mode">tree</field>
        <field name="view_type">form</field>
        <field name="context">{'supplier_access_context': True, 'search_default_groupby_category_name': 1}</field>
        <field name="domain">[('type', '=', 'product'), ('categ_id.supplier_access', '=', True)]</field>
        <field name="view_id" ref="view_product_catalog_tree"/>
        <field name="search_view_id" ref="product_catalog_search"/>
    </record>

    <menuitem id="menu_supplier_stock_offer" name="Our Stock Offer"
              groups="supplier_user_access.group_supplier,sales_team.group_sale_manager" sequence="15"/>
    
    <menuitem id="menu_action_product_catalog" name="Products Catalog"
              action="action_product_catalog" parent="menu_supplier_stock_offer" sequence="1"/>

</odoo>
