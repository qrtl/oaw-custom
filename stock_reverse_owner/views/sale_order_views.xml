<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_order_line_quant.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='order_line']//form//field[@name='quant_id']" position="replace">
                <field name="quant_id" options="{'no_quick_create':True, 'no_create_edit':True}" domain="[('product_id','=',product_id),
                                ('reservation_id', '=', False),
                                ('quantity','>', 0.0),
                                ('actual_qty','>', 0.0),
                                ('repair', '=', False),
                                ('usage', '=', 'internal')]" attrs="{'readonly': [('is_mto','=',True)], 'required': [('is_mto','!=',True)]}"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='quant_id']" position="replace">
                <field name="quant_id" options="{'no_quick_create':True, 'no_create_edit':True}" domain="[('product_id','=',product_id),
                                ('reservation_id', '=', False),
                                ('quantity','>', 0.0),
                                ('actual_qty','>', 0.0),
                                ('repair', '=', False),
                                ('usage', '=', 'internal')]" attrs="{'readonly': [('is_mto','=',True)], 'required': [('is_mto','!=',True)]}"/>

            </xpath>
        </field>
    </record>

</odoo>
