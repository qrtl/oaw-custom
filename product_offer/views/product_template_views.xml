        <field name="inherit_id" ref="stock.product_template_search_form_view_stock"/>
        <field name="arch" type="xml">
            <xpath expr="//filter[@string='Exhausted Stock']" position="replace">
            </xpath>
            <xpath expr="//filter[@string='Forecast Exhausted Stock']" position="replace">
            </xpath>
             <xpath expr="//filter[@string='Forecast Negative Stock']" position="replace">
