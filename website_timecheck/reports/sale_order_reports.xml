<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <report id="custom_report_saleorder_website" model="sale.order" string="Chrono123 Website Quo"
                report_type="qweb-pdf" groups="base.group_sale_salesman_all_leads"
                name="website_timecheck.report_sale_order_website"
                file="website_timecheck.report_sale_order_website"/>

        <template id="report_sale_order_website">
            <t t-call="report.html_container">
                <t t-foreach="doc_ids" t-as="doc_id">
                    <t t-raw="translate_doc(doc_id, doc_model, 'partner_id.lang', 'website_timecheck.report_saleorder_website_document')"/>
                </t>
            </t>
        </template>

        <template id="report_external_layout_footer_website">
            <!-- replaces the complete footer code with customized code -->
            <xpath expr="//*/div[@class='footer']" position="replace">
                <div class="footer">
                    <div class="text-center" style="border-top: 1px solid black;">
                        <ul class="list-inline">
                            <li t-if="company.phone">Phone:
                                <span t-field="company.phone"/>
                            </li>
                            <li t-if="company.email">Email:
                                <span t-field="company.email"/>
                            </li>
                            <li>
                                <p>all our products are exclusively sold in the Hong Kong S.A.R. only</p>
                            </li>
                        </ul>
                        <ul class="list-inline">
                            <li>Page:</li>
                            <li>
                                <span class="page"/>
                            </li>
                            <li>/</li>
                            <li>
                                <span class="topage"/>
                            </li>
                        </ul>
                    </div>
                </div>
            </xpath>
        </template>


        <template id="report_external_layout_header_website">
            <!-- replaces the complete header code with customized code -->
            <xpath expr="//*/div[@class='header']" position="replace">
                <div class="header">
                    <div class="row">
                        <div class="col-xs-3">
                            <img t-if="company.logo" t-att-src="'data:image/png;base64,%s' % company.logo"
                                 style="max-height: 45px;"/>
                        </div>
                        <div class="col-xs-9 text-right" style="margin-top:20px;" t-field="company.rml_header1"/>
                    </div>

                    <div class="row zero_min_height">
                        <div class="col-xs-12">
                            <div style="border-bottom: 1px solid black;"></div>
                            <br/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-xs-4">
                            <p t-field="company.name"/>
                            <p t-field="company.street"/>
                            <p t-field="company.street2"/>
                            <p t-field="company.city"/>
                            <p t-field="company.state_id.name"/>
                            <p t-field="company.zip"/>
                            <p t-field="company.country_id.name" style="border-bottom: 1px solid black;"/>
                            <br/>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="external_layout_website">
            <!-- Multicompany -->
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"></t>
            </t>
            <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"></t>
            </t>

            <t t-call="report.external_layout_header"/>
            <t t-raw="0"/>
            <t t-call="report.external_layout_footer"/>
        </template>

        <template id="report_saleorder_website_document">
            <t t-call="website_timecheck.external_layout_website">
                <div class="page">
                    <div class="oe_structure"/>
                    <div class="row">
                        <div class="col-xs-4">
                            <strong t-if="o.partner_shipping_id == o.partner_invoice_id">Invoice:</strong>
                            <p t-field="o.partner_invoice_id.name"/>
                            <p t-field="o.partner_invoice_id.street"/>
                            <p t-field="o.partner_invoice_id.street2"/>
                            <p t-field="o.partner_invoice_id.city"/>
                            <span t-field="o.partner_invoice_id.state_id.name"/>
                            <span t-field="o.partner_invoice_id.zip"/>
                            <p t-field="o.partner_invoice_id.country_id.name"/>
                        </div>
                        <div t-if="o.partner_shipping_id != o.partner_invoice_id" class="col-xs-4">
                            <strong>Shipping Address:</strong>
                            <p t-field="o.partner_shipping_id.name"/>
                            <p t-field="o.partner_shipping_id.street"/>
                            <p t-field="o.partner_shipping_id.street2"/>
                            <p t-field="o.partner_shipping_id.city"/>
                            <span t-field="o.partner_shipping_id.state_id.name"/>
                            <span t-field="o.partner_shipping_id.zip"/>
                            <p t-field="o.partner_shipping_id.country_id.name"/>
                        </div>

                        <div t-if="o.partner_shipping_id == o.partner_invoice_id" class="col-xs-4">
                        </div>

                        <div class="col-xs-4" style="text-align:right">
                            <strong t-if="o.state not in ['draft','sent']">Date Ordered:</strong>
                            <strong t-if="o.state in ['draft','sent']">Date:</strong>
                            <span t-field="o.date_order" t-field-options='{"format": "yyyy-MM-dd"}'/>
                            <br/>
                            <strong>Code:</strong>
                            <span t-esc="o.name.split('-')[-1]"/> <span t-esc="o.partner_id.ref or o.partner_id.name"/>
                            <br/>
                        </div>

                        <div class="col-xs-5 col-xs-offset-1">

                        </div>
                    </div>

                    <h2>
                        <span>INVOICE</span>
                    </h2>
                    <br/>

                    <table class="table table-condensed">
                        <thead>
                            <tr>
                                <th>Description</th>
                                <th>Case No.</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Retail</th>
                                <th groups="sale.group_discount_per_so_line">Discount (%)</th>
                                <th class="text-right">Subtotal</th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">
                            <tr t-foreach="o.order_line" t-as="l">
                                <td>
                                    <span t-field="l.name"/>
                                </td>
                                <td>
                                    <span t-field="l.lot_id"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.product_uom_qty"/>
                                    <span groups="product.group_uom" t-field="l.product_uom"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_unit"/>
                                </td>
                                <td groups="sale.group_discount_per_so_line">
                                    <span t-field="l.discount"/>
                                </td>
                                <td class="text-right">
                                    <span t-field="l.price_subtotal"
                                          t-field-options='{"widget": "monetary", "display_currency": "o.pricelist_id.currency_id"}'/>
                                </td>
                            </tr>
                        </tbody>
                    </table>

                    <div class="row">
                        <div class="col-xs-4 pull-right">
                            <table class="table table-condensed">
                                <tr class="border-black">
                                    <td>
                                        <strong>Total</strong>
                                    </td>
                                    <td class="text-right">
                                        <span t-field="o.amount_untaxed"
                                              t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                    </td>
                                </tr>
                            </table>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</openerp>
