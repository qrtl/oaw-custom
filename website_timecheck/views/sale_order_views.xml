<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <record id="portal_quotation_search" model="ir.ui.view">
            <field name="name">portal.quotation.search</field>
            <field name="model">sale.order</field>
            <field name="arch" type="xml">
                <search>
                    <field name="name" string="Order Number"/>
                    <group expand="0" name='available' string="Available">
                        <filter name="cancelled" string="Cancelled Quotations"
                                domain="[('state','=','cancel')]"/>
                        <filter name="not_cancelled" string="Current Quotations"
                                domain="[('state','=','draft')]"/>                    </group>
                </search>
            </field>
        </record>


        <record id="portal_sale.action_quotations_portal" model="ir.actions.act_window">
            <field name="name">Quotations</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">sale.order</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[('state','in',('draft','sent','cancel'))]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="portal_quotation_search"/>
            <field name="context">{"search_default_not_cancelled":1}</field>
        </record>

        <record id="view_order_form" model="ir.ui.view">
            <field name="name">sale.order.form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='state']" position="before">
                    <button name="print_portal_quotation" string="Print Quotation" type="object" states="draft,sent" class="oe_highlight" groups="website_timecheck.group_timecheck_basic"/>
                </xpath>
                <field name="note" position="before">
                    <group>
                        <field name="payment_method"/>
                        <field name="payment_desc"/>
                        <field name="picking_date"/>
                        <field name="other_inquiry"/>
                    </group>
                </field>
            </field>
        </record>

    </data>
</openerp>
