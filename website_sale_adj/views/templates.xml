<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>

        <template id="cart" name="Shopping Cart" inherit_id="website_sale.cart">
            <xpath expr="//a[@class='btn btn-primary pull-right mb32']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
            <xpath expr="//ul[@class='wizard pull-right']" position="attributes">
                <attribute name="style">display: none;</attribute>
            </xpath>
        </template>

        <template id="layout_footer_copyright" inherit_id="website.layout_footer_copyright">
            <xpath expr="//div[@class='container mt16 mb8']" position="replace"/>
        </template>

        <template id="website.footer_default" inherit_id="website.footer_custom" customize_show="True" name="Automatic Footer">
            <xpath expr="//div[@id='footer']" position="replace">
                <div class="container hidden-print">
                    <div class="row">
                        <div class="col-md-3" style="display: none;">
                            <h4>Our products &amp; Services</h4>
                            <ul class="list-unstyled" id="products">
                                <li>
                                    <a href="/">Home</a>
                                </li>
                            </ul>
                        </div>
                        <div class="col-md-3" id="info">
                            <h4 style="display: none;">Contact us</h4>
                            <ul class="list-unstyled">
                                <li>
                                    <p t-field="website.contact_description"/>
                                </li>
                            </ul>
                            <ul class="list-unstyled" style="display: none;">
                                <li>
                                    <a href="/page/website.contactus">Contact us</a>
                                </li>
                            </ul>
                            <ul class="list-unstyled" style="display: none;">
                                <li t-ignore="true">
                                    <i class="fa fa-phone"></i>
                                    <span t-field="res_company.phone"></span>
                                </li>
                                <li t-ignore="true">
                                    <i class="fa fa-envelope"></i>
                                    <span t-field="res_company.email"></span>
                                </li>
                            </ul>
                            <h2 style="display: none;">
                                <a t-att-href="website.social_facebook" t-if="website.social_facebook">
                                    <i class="fa fa-facebook-square"/>
                                </a>
                                <a t-att-href="website.social_twitter" t-if="website.social_twitter">
                                    <i class="fa fa-twitter"/>
                                </a>
                                <a t-att-href="website.social_linkedin" t-if="website.social_linkedin">
                                    <i class="fa fa-linkedin"/>
                                </a>
                                <a t-att-href="website.social_youtube" t-if="website.social_youtube">
                                    <i class="fa fa-youtube-play"/>
                                </a>
                                <a t-att-href="website.social_googleplus" t-if="website.social_googleplus" rel="publisher">
                                    <i class="fa fa-google-plus-square"/>
                                </a>
                                <a t-att-href="website.social_github" t-if="website.social_github">
                                    <i class="fa fa-github"/>
                                </a>
                            </h2>
                        </div>
                        <div class="col-md-5 col-lg-offset-1">
                            <div>
                                <h4>
                                    <span t-field="res_company.name" style="display: none;"/>
                                    <small style="display: none;">-
                                        <a href="/page/website.aboutus">About us</a>
                                    </small>
                                </h4>
                                <p t-field="website.about_us"/>
                            </div>
                            <ul class="list-inline js_language_selector mt16" t-if="(request.website_multilang and len(languages) &gt; 1) or editable">
                                <li t-foreach="languages" t-as="lg">
                                    <a t-att-href="url_for(request.httprequest.path + '?' + keep_query(), lang=lg[0])" t-att-data-default-lang="editable and 'true' if lg[0] == website.default_lang_code else None" t-att-data-lang="lg[0]" class="js_change_lang">
                                        <t t-esc="lg[1].split('/').pop()"/>
                                    </a>
                                </li>
                                <li groups="base.group_website_publisher">
                                    <t t-set="url_return" t-value="url_for('', '[lang]') + '?' + keep_query()"/>
                                    <a t-attf-href="/web#action=base.action_view_base_language_install&amp;website_id=#{website.id}&amp;url_return=#{url_return}">
                                        <i class="fa fa-plus-circle"/>
                                        Add a language...
                                    </a>
                                </li>
                            </ul>
                        </div>
                    </div>
                </div>
            </xpath>
        </template>

        <template id="products" inherit_id="website_sale.products" name="Products">
            <xpath expr="//t[@t-if='not bins']" position="inside">
                <div class="alert alert-info" style="text-align: left;" t-raw="website.empty_page_message"/>
            </xpath>
        </template>

        <template id="layout" inherit_id="website.layout">
            <xpath expr="//div[@class='navbar navbar-default navbar-static-top']" position="attributes">
                <attribute name="style">position: fixed; width: -webkit-fill-available; width: -moz-available; min-height: 100px; z-index: 1000;</attribute>
            </xpath>
        </template>

        <template id="login_layout" inherit_id="website.login_layout">
            <xpath expr="//div[@class='oe_website_login_container']" position="attributes">
                <attribute name="style">margin-top: 120px; padding: 10px;</attribute>
            </xpath>
        </template>

        <template id="layout_logo_show" inherit_id="website.layout_logo_show">
            <xpath expr="//a[@class='navbar-brand logo']" position="replace">
                <a href="/" class="navbar-brand logo visible-xs-inline" style="padding: 0 5px;">
                    <img style="max-height: 80px;" src="/logo.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                </a>
                <t t-if="website.whatsapp_link and website.whatsapp_qr_image">
                    <a t-att-href="website.whatsapp_link" class="navbar-brand logo visible-xs-inline" style="padding: 0 5px;">
                        <img style="height: 80px; width: 80px; max-height: 80px;" t-att-src="website.image_url(website, 'whatsapp_qr_image', '100x100')"/>
                    </a>
                </t>
                <t t-if="website.wechat_link and website.wechat_qr_image">
                    <a t-att-href="website.wechat_link" class="navbar-brand logo visible-xs-inline" style="padding: 0 5px;">
                        <img style="height: 80px; width: 80px; max-height: 80px;" t-att-src="website.image_url(website, 'wechat_qr_image', '100x100')"/>
                    </a>
                </t>
                <a href="/" class="navbar-brand logo hidden-xs" style="padding: 0 15px;">
                    <img style="max-height: 80px;" src="/logo.png" t-att-alt="'Logo of %s' % res_company.name" t-att-title="res_company.name"/>
                </a>
                <t t-if="website.whatsapp_link and website.whatsapp_qr_image">
                    <a t-att-href="website.whatsapp_link" class="navbar-brand logo hidden-xs" style="padding: 0 15px;">
                        <img style="height: 80px; width: 80px; max-height: 80px;" t-att-src="website.image_url(website, 'whatsapp_qr_image', '100x100')"/>
                    </a>
                </t>
                <t t-if="website.wechat_link and website.wechat_qr_image">
                    <a t-att-href="website.wechat_link" class="navbar-brand logo hidden-xs" style="padding: 0 15px;">
                        <img style="height: 80px; width: 80px; max-height: 80px;" t-att-src="website.image_url(website, 'wechat_qr_image', '100x100')"/>
                    </a>
                </t>
            </xpath>
        </template>

    </data>
</openerp>
