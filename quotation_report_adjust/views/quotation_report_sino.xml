<?xml version="1.0" encoding="utf-8"?>
<odoo>
        <report
            id = "custom_report_quotation_sino"
            model = "sale.order"
            string = "Sino Quo Print"
            report_type = "qweb-pdf"
            groups=""
            name = "quotation_report_adjust.report_sino_saleorder"
            file = "quotation_report_adjust.report_sino_saleorder"
        />

        <template id="report_sino_saleorder">
            <t t-call = "report.html_container">
                <t t-foreach = "doc_ids" t-as="doc_id">
                    <t t-raw = "translate_doc(doc_id, doc_model, 'partner_id.lang', 'chr123_custom.report_sino_saleorder_document')"/>
                </t>
            </t>
        </template>

        <template id="custom_header_sino">
            <div class="header">

                <div class="row">
                    <div class="col-6" name="company_address">
                            <p>Sino Trading Ltd</p>
                            <p>1022 Unit, Harbour City</p>
                            <p>5 Canton Road</p>
                            <p>T.S.T., Hong Kong SAR</p>
                    </div>
                </div>


            </div>
        </template>

        <template id="custom_footer_sino">
             <div class="footer o_standard_footer">
                 <div class="text-center" style="border-top: 1px solid black;">
                     <ul class="list-inline">
                         <li>Email:
                             <span>+852 6848 4386</span>
                         </li>
                         <li>Email:
                             <span>sinotradingltd@gmail.com</span>
                         </li>
                         <li>
                             <p>All our products are exclusively sold in the Hong Kong S.A.R. only</p>
                         </li>
                     </ul>
                        <div t-if="report_type == 'pdf'" class="text-muted">
                            Page: <span class="page"/> / <span class="topage"/>
                        </div>
                 </div>
             </div>
        </template>

        <template id="report_ext_layout_sino">
            <t t-if="o and 'company_id' in o">
                <t t-set="company" t-value="o.company_id"/>
            </t>
             <t t-if="not o or not 'company_id' in o">
                <t t-set="company" t-value="res_company"/>
            </t>
            <div class="article">
                  <t t-call="quotation_report_adjust.custom_header_sino"/>
                 <br/>
                <br/>
                <br/>
                <t t-raw="0"/>
                <t t-call="quotation_report_adjust.custom_footer_sino"/>
            </div>
        </template>


        <template id="report_sino_saleorder_document">
            <t t-call="quotation_report_adjust.report_ext_layout_sino">
                <!--Customer Address, Date and Code-->
                <div name="customer_adress">
                    <div>
                        <p t-field="doc.partner_invoice_id.name"/>
                        <p t-field="doc.partner_invoice_id.street"/>
                        <p t-field="doc.partner_invoice_id.street2"/>
                    </div>
                    <div style="text-align:right">
                        <strong>Create Date:</strong><span t-field="doc.create_date" t-options='{"format": "yyyy-MM-dd"}'/><br />
                        <strong>Code:</strong> <span t-field="doc.order_ref_report"/><br />
                    </div>
                </div>
                <br/>
                <div class="page">
                    <div class="oe_structure"/>
                    <h2>
                        <t t-if="not (env.context.get('proforma', False) or is_pro_forma)">
                            <span> Invoice </span>
                        </t>
                    </h2>
                    <!-- Is there a discount on at least one line? -->
                    <t t-set="display_discount" t-value="any([l.discount for l in doc.order_line])"/>
                    <table class="table table-sm o_main_table">
                        <thead>
                            <tr>
                                <t t-set="colspan" t-value="5"/>
                                <th class="text-left">Description</th>
                                <th class="text-left">Case No.</th>
                                <th class="text-right">Quantity</th>
                                <th class="text-right">Retail</th>
                                <th class="text-right" groups="sale.group_discount_per_so_line">
                                    <span>Disc.(%)</span>
                                    <t t-set="colspan" t-value="colspan+1"/>
                                </th>
                                <th class="text-right">
                                    <t groups="account.group_show_line_subtotals_tax_excluded">Amount</t>
                                    <t groups="account.group_show_line_subtotals_tax_included">Total Price</t>
                                </th>
                            </tr>
                        </thead>
                        <tbody class="sale_tbody">

                            <t t-set="current_subtotal" t-value="0"/>

                            <t t-foreach="doc.order_line" t-as="line">

                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                <t t-set="current_subtotal" t-value="current_subtotal + line.price_total" groups="account.group_show_line_subtotals_tax_included"/>

                                <tr t-att-class="'bg-200 font-weight-bold o_line_section' if line.display_type == 'line_section' else 'font-italic o_line_note' if line.display_type == 'line_note' else ''">
                                    <t t-if="not line.display_type">
                                        <td><span t-field="line.name"/></td>
                                        <td><span t-field="line.lot_id"/></td>
                                        <td class="text-right">
                                            <span t-field="line.product_uom_qty"/>
                                            <span t-field="line.product_uom" groups="uom.group_uom"/>
                                        </td>
                                        <td class="text-right">
                                            <span t-field="line.price_unit"/>
                                        </td>
                                        <td class="text-right" groups="sale.group_discount_per_so_line">
                                            <span t-field="line.discount"/>
                                        </td>
                                        <td class="text-right o_price_total">
                                            <span t-field="line.price_subtotal" groups="account.group_show_line_subtotals_tax_excluded"/>
                                            <span t-field="line.price_total" groups="account.group_show_line_subtotals_tax_included"/>
                                        </td>
                                    </t>
                                    <t t-if="line.display_type == 'line_section'">
                                        <td t-att-colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                        <t t-set="current_section" t-value="line"/>
                                        <t t-set="current_subtotal" t-value="0"/>
                                    </t>
                                    <t t-if="line.display_type == 'line_note'">
                                        <td t-att-colspan="99">
                                            <span t-field="line.name"/>
                                        </td>
                                    </t>
                                </tr>

                                <t t-if="current_section and (line_last or doc.order_line[line_index+1].display_type == 'line_section')">
                                    <tr class="is-subtotal text-right">
                                        <td t-att-colspan="99">
                                            <strong class="mr16">Subtotal</strong>
                                            <span
                                                t-esc="current_subtotal"
                                                t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'
                                            />
                                        </td>
                                    </tr>
                                </t>
                            </t>
                        </tbody>
                    </table>

                    <div class="clearfix">
                        <div id="total" class="row" name="total">
                            <div t-attf-class="#{'col-4' if report_type != 'html' else 'col-sm-7 col-md-5'} ml-auto">
                                <table class="table table-sm">
                                    <tr class="border-black o_subtotal" style="">
                                        <td><strong>Subtotal</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_untaxed"/>
                                        </td>
                                    </tr>
                                    <t t-foreach="doc.amount_by_group" t-as="amount_by_group">
                                        <tr style="">
                                            <t t-if="amount_by_group[3] == 1 and doc.amount_untaxed == amount_by_group[2]">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                    <span>&amp;nbsp;<span>on</span>&amp;nbsp;<t t-esc="amount_by_group[2]" t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/></span>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[1]"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                </td>
                                            </t>
                                            <t t-else ="">
                                                <td>
                                                    <span t-esc="amount_by_group[0]"/>
                                                </td>
                                                <td class="text-right o_price_total">
                                                    <span t-esc="amount_by_group[1]"
                                                        t-options='{"widget": "monetary", "display_currency": doc.pricelist_id.currency_id}'/>
                                                </td>
                                            </t>
                                        </tr>
                                    </t>
                                    <tr class="border-black o_total">
                                        <td><strong>Total</strong></td>
                                        <td class="text-right">
                                            <span t-field="doc.amount_total"/>
                                        </td>
                                    </tr>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div>
                        <p t-field="doc.quot_report_note" />
                    </div>
                    <div >
                            <div>
                            </div >
                            <table class="table-bordered" style="width:100%">
                              <tr style="font-size:10px">
                                <th colspan='2' style="text-align:center">No.</th>
                                <th colspan='2' style="text-align:center">Payment</th>
                                <th colspan='2' style="text-align:center">Main Item</th>
                                <th colspan='2' style="text-align:center">Warranty</th>
                                <th colspan='2' style="text-align:center">Manual</th>
                                <th colspan="2" style="text-align:center">Box</th>
                              </tr>

                              <tr t-foreach="doc.order_line" t-as="l" style="height:32px">
                                <td colspan='2' style="width:5%"></td>
                                <td style="width:11%"></td>
                                <td style="width:8%"></td>
                                <td style="width:11%"></td>
                                <td style="width:8%"></td>
                                <td style="width:11%"></td>
                                <td style="width:8%"></td>
                                <td style="width:11%"></td>
                                <td style="width:8%"></td>
                                <td style="width:11%"></td>
                                <td style="width:8%"></td>
                              </tr>
                        </table>
                    </div>
                    <div class="oe_structure"/>
                </div>
             </t>
        </template>

        <template id="report_sino_saleorder">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="doc">
                    <t t-call="quotation_report_adjust.report_sino_saleorder_document" t-lang="doc.partner_id.lang"/>
                </t>
            </t>
        </template>
</odoo>