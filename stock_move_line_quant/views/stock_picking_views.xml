<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_picking_form" model="ir.ui.view">
        <field name="name">stock.picking.form</field>
        <field name="model">stock.picking</field>
        <field name="inherit_id" ref="stock.view_picking_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='owner_id']" position="after">
                <field name="purchase_currency_id"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']//field[@name='lot_id']" position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']//field[@name='lot_id']" position="before">
                <field name="picking_id" invisible="1"/>
                <field name="package_level_id" invisible="1"/>
                <field name="quant_id" attrs="{'column_invisible': [('parent.show_lots_text', '=', True)], 'invisible': [('lots_visible', '=', False)]}"
                       domain="[('product_id', '=', product_id)]" groups="stock.group_production_lot" context="{'default_product_id': product_id, 'active_picking_id': picking_id}"/>
            </xpath>
            <xpath expr="//field[@name='move_line_ids_without_package']//field[@name='lot_name']" position="after">
                <field name="purchase_price_unit" attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('lots_visible', '=', False)]}"/>
                <field name="currency_id" options="{'no_open': True, 'no_create': True}" attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('lots_visible', '=', False)]}"/>
                <field name="exchange_rate" attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('lots_visible', '=', False)]}"/>
                <field name="price_unit" attrs="{'readonly': [('state', '=', 'done')], 'invisible': [('lots_visible', '=', False)]}"/>
            </xpath>
        </field>
    </record>

</odoo>
