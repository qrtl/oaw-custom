<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="is_mto"/>
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{'default_is_mto': is_mto}</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//form//field[@name='product_id'] " position="after">
                <field name="quant_id"
                       options="{'no_quick_create':True, 'no_create_edit':True}"
                       domain="[('product_id','=',product_id),
                                ('reservation_id', '=', False),
                                ('quantity','>', 0.0),
                                ('actual_qty','>', 0.0),
                                ('usage', '=', 'internal')]"
                       attrs="{'readonly': [('is_mto','=',True)], 'required': [('is_mto','!=',True)]}"/>
                <field name="lot_id" invisible="1" attrs="{'readonly': [('is_mto','=',True)]}"/>
                <field name="route_id" groups="sale_stock.group_route_so_lines"
                       attrs="{'readonly': [('quant_id','!=',False)]}"/>
                <field name="is_mto" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='tax_id'] " position="attributes">
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath expr="//field[@name='order_line']//tree//field[@name='product_id'] " position="after">
                <field name="quant_id"
                       options="{'no_quick_create':True, 'no_create_edit':True}"
                       domain="[('product_id','=',product_id),
                                ('reservation_id', '=', False),
                                ('quantity','>', 0.0),
                                ('actual_qty','>', 0.0),
                                ('usage', '=', 'internal')]"
                       attrs="{'readonly': [('is_mto','=',True)], 'required': [('is_mto','!=',True)]}"/>
                <field name="lot_id" invisible="1" attrs="{'readonly': [('is_mto','=',True)]}"/>
                <field name="route_id" groups="sale_stock.group_route_so_lines"
                       attrs="{'readonly': [('quant_id','!=',False)]}" invisible="1"/>
                <field name="is_mto" invisible="1"/>
            </xpath>
        </field>
    </record>

</odoo>
