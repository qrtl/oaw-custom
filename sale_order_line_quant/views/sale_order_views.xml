<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_shipping_id']" position="after">
                <field name="is_mto" />
            </xpath>
            <xpath expr="//field[@name='order_line']" position="attributes">
                <attribute name="context">{'default_is_mto': is_mto}</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']//form//field[@name='product_id'] "
                position="after"
            >
                <field name="tracking" invisible="1" />
                <field
                    name="quant_id"
                    options="{'no_quick_create':True, 'no_create_edit':True}"
                    domain="[('product_id','=',product_id),
                                ('sale_order_id', '=', False),
                                ('reservation_id', '=', False),
                                ('quantity','>', 0.0),
                                ('actual_qty','>', 0.0),
                                ('usage', '=', 'internal')]"
                    attrs="{'readonly': [('is_mto','=',True)], 'required': [('is_mto','!=',True), ('tracking', '!=', 'none')]}"
                />
                <field
                    name="lot_id"
                    invisible="1"
                    attrs="{'readonly': [('is_mto','=',True)]}"
                />
                <field
                    name="route_id"
                    groups="sale_stock.group_route_so_lines"
                    attrs="{'readonly': [('quant_id','!=',False)]}"
                />
                <field name="is_mto" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='tax_id'] "
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='product_id'] "
                position="after"
            >
                <field name="tracking" invisible="1" />
                <field
                    name="quant_id"
                    options="{'no_quick_create':True, 'no_create_edit':True}"
                    domain="[('product_id','=',product_id),
                                ('sale_order_id', '=', False),
                                ('reservation_id', '=', False),
                                ('quantity','>', 0.0),
                                ('actual_qty','>', 0.0),
                                ('usage', '=', 'internal')]"
                    attrs="{'readonly': [('is_mto','=',True)], 'required': [('is_mto','!=',True), ('tracking', '!=', 'none')]}"
                />
                <field
                    name="lot_id"
                    invisible="1"
                    attrs="{'readonly': [('is_mto','=',True)]}"
                />
                <field
                    name="route_id"
                    groups="sale_stock.group_route_so_lines"
                    attrs="{'readonly': [('quant_id','!=',False)]}"
                    invisible="1"
                />
                <field name="is_mto" invisible="1" />
            </xpath>
            <xpath
                expr="//field[@name='order_line']//form//field[@name='purchase_price']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='purchase_price']"
                position="attributes"
            >
                <attribute name="invisible">1</attribute>
            </xpath>
            <xpath
                expr="//field[@name='order_line']//form//field[@name='purchase_price']"
                position="after"
            >
                <field
                    name="quant_price_unit"
                    groups="sales_team.group_sale_salesman"
                />
            </xpath>
            <xpath
                expr="//field[@name='order_line']//tree//field[@name='purchase_price']"
                position="after"
            >
                <field
                    name="quant_price_unit"
                    groups="sales_team.group_sale_salesman"
                />
            </xpath>
        </field>
    </record>
    <record id="sale_margin_sale_order" model="ir.ui.view">
        <field name="name">sale.order.margin.view.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale_margin.sale_margin_sale_order" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='margin']" position="attributes">
                <attribute name="widget">monetary</attribute>
                <attribute
                    name="options"
                >{'currency_field': 'company_id.currency_id'}</attribute>
            </xpath>
        </field>
    </record>
    <record id="view_sales_order_filter" model="ir.ui.view">
        <field name="name">sale.order.list.select</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_sales_order_filter" />
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="lot_id" />
            </xpath>
        </field>
    </record>
</odoo>
